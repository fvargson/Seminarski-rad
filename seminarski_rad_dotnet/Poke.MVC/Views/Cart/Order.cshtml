@model List<Poke.MVC.Extensions.CartItem>

@{
    ViewData["Title"] = "Order";
}

@if(ViewBag.errors != null)
{
    @foreach (var item in ViewBag.errors)
    {
        <div role="alert" class="alert alert-danger">
            @item
        </div>
    }
}

<h1>Order</h1>

<div class="row mt-2">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-danger badge-pill" style="color:black;">@Model.Count</span>
        </h4>
        <ul class="list-group mb-3 card">
            @foreach(var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@(item.Product != null?item.Product.Name:item.Bundle.Name)</h6>
                        <small class="text-muted">Quantity: 
                            @item.Quantity
                        </small>
                    </div>
                    <span class="text-muted">
                        @item.GetTotal()
                        <img src="~/img/PokeDollar.png" class="mb-1" />
                    </span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between border-top">
                <div>
                    <h6 class="my-0">PokeBall(s)</h6>
                    <small class="text-muted">
                        Every Pokemon will arrive in it's own PokeBall
                    </small>
                </div>
                <strong>
                    Free
                </strong>
            </li>
            <li class="list-group-item d-flex justify-content-between border-top">
                <span>Total</span>
                <strong>
                    @ViewBag.TotalPrice
                    <img src="~/img/PokeDollar.png" class="mb-1" />
                </strong>
            </li>
        </ul>
    </div>
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Billing address</h4>
        <form class="needs-validation p-2 bg-white card" asp-area="" asp-controller="Cart" asp-action="Order" method="POST">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="firstName">First name <strong>*</strong></label>
                    <input type="text" class="form-control" id="firstName" name="FirstName">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName">Last name <strong>*</strong></label>
                    <input type="text" class="form-control" id="lastName" name="LastName">
                </div>
            </div>
            
            <div class="mb-3">
                <label for="email">Email <strong>*</strong></label>
                <input type="email" class="form-control" id="email" placeholder="you@example.com" name="Email">
            </div>

            <div class="mb-3">
                <label for="phone">Phone <strong>*</strong></label>
                <input type="text" class="form-control" id="phone" name="Phone">
            </div>
            
            <div class="mb-3">
                <label for="address">Address <strong>*</strong></label>
                <input name="Address" type="text" class="form-control" id="address">
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="country">Country <strong>*</strong></label>
                    <select class="form-control custom-select d-block w-100" id="country" name="Country">
                        <option value="">Choose...</option>
                        <option value="Croatia">Croatia</option>
                        <option value="Slovenia">Slovenia</option>
                        <option value="Serbia">Serbia</option>
                        <option value="Bosnia and Herzegovina">Bosnia and Herzegovina</option>
                    </select>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="city">City <strong>*</strong></label>
                    <input type="text" class="form-control" id="city" name="City">
                </div>
                <div class="col-md-3 mb-3">
                    <label for="zip">Zip <strong>*</strong></label>
                    <input type="text" class="form-control" id="zip" name="Zip">
                </div>
            </div>

            <div class="mb-3">
                <label for="message">Message</label>
                <textarea class="form-control" rows="5" id="message" name="Message" placeholder="Add an optional message"></textarea>
            </div>

            <div class="row justify-content-center">
                <button class="col-md-3 btn btn-warning m-2" asp-area="" asp-controller="Cart" asp-action="Index">Back to Cart</button>
                <button class="col-md-3 btn btn-success m-2" type="submit">Continue to checkout</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}