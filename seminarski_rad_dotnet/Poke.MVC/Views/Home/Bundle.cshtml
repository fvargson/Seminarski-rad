@model Poke.Data.Model.PokeBundle

@{
    ViewData["Title"] = "Bundle";
    var pokemons = (List<Poke.Data.Model.MyPokemon>)ViewBag.pokemons;
    var sc_infos = (List<PokeApiNet.PokemonSpecies>)ViewBag.sc_infos;
}

<h1>Bundle</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <div class="row">
        <div class="col">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    Description
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PackDescription)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                    <img src="~/img/PokeDollar.png" class="mb-1" />
                </dd>
                <div class="row border rounded pt-2">
                    <dt class="col-sm-2">
                        Total
                    </dt>
                    <dd class="col-sm-10">
                        <price id="totalPrice">
                            @Model.Price
                        </price>
                        <img src="/img/PokeDollar.png" class="mb-1">
                    </dd>
                </div>
            </dl>
            <form asp-controller="Cart" asp-action="AddBundleToCart" asp-route-id="@Model.Id" class="form">
                <div class="form-group">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" id="quantity" name="quantity" min="1" max="@Model.Quantity" onchange="updateTotal()" value="1" class="form-control mb-2" />
                </div>
                <input type="submit" class="btn btn-success mb-2" value="Add to cart" />
            </form>
        </div>
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Pokemon</th>
                        <th></th>
                        <th>Color</th>
                        <th>Generation</th>
                        <th>Shape</th>
                        @if(sc_infos.Where(i => i.EvolvesFromSpecies != null) != null)
                        {
                            <th>Evolves from</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in pokemons)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <img src="@item.Url_fd" class="poke_full_small" />
                            </td>
                            @{
                                var sc_info = sc_infos.Where(i => i.Name == item.Name || item.Name.Contains(i.Name)).FirstOrDefault();
                            }
                            <td>@sc_info.Color.Name</td>
                            <td>@sc_info.Generation.Name</td>
                            <td>@sc_info.Shape.Name</td>
                            @if(sc_info.EvolvesFromSpecies != null)
                            {
                                <td>
                                    @sc_info.EvolvesFromSpecies.Name
                                </td>
                            } else
                            {
                                <td></td>
                            }
                        </tr>
                    }
                    <td></td>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to Products</a>
</div>
<script>
    function updateTotal() {
        var quantity = document.getElementById('quantity').value;
        var total = document.getElementById('totalPrice');
        total.innerHTML = quantity * @Model.Price;
    }
</script>