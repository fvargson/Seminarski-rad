@model Poke.Data.Model.PokeBundle

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PokeBundle</h4>
    <hr />
    <div class="row">
        <div class="col-md-7 mb-2">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    Description
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PackDescription)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                    <img class="mb-1" src="~/img/PokeDollar.png" />
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
            </dl>
        </div>
        <div class="col-md-7 mb-2">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Image
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (List<Poke.Data.Model.MyPokemon>)ViewBag.added_pokemon)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <img src="@item.Url_full_image" class="poke_full_small" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
