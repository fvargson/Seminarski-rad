@using Poke.Data.Model
@model PokeProduct

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pokemon</h4>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="PokemonId">Pokemon</label>
                <select title="Select a Pokemon" onchange="show_img()" name="PokemonId" id="PokemonId"
                    class="form-control">
                    <option selected disabled value="">--Choose Pokemon--</option>
                    @foreach (var item in (IEnumerable<MyPokemon>)ViewBag.Pokemons)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
        <div class="col-md-2">
            <img id="PokemonImage" />
        </div>
    </div>
</form>



<script>
    function show_img() {
        var value = document.getElementById("PokemonId").value;
        var img = document.getElementById("PokemonImage");
        img.src = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/" + value + ".png";
        if(!img.classList.contains("poke_full"))
            img.classList.add("poke_full");
    }
</script>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
