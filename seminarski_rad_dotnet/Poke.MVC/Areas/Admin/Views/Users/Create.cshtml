@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if(ViewBag.errors != null)
{
    @foreach (var item in (List<string>)ViewBag.errors)
    {
        <div role="alert" class="alert alert-danger">
            @item
        </div>
    }
}

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group mb-2">
                <label for="email">Email</label>
                <input name="Email" id="email" class="form-control" required />
            </div>
            <div class="form-group mb-2">
                <label for="password">Password</label>
                <input type="password" name="Password" id="password" class="form-control" required />
            </div>
            <div class="form-group mb-2">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="Confirm" id="confirmPassword" class="form-control" required />
            </div>
            <div class="form-group mb-2">
                <label for="role">Type</label>
                <select name="Role" id="role" class="form-control">
                    <option value="User">User</option>
                    @foreach (var item in (List<IdentityRole>)ViewBag.roles)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Back to list</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
