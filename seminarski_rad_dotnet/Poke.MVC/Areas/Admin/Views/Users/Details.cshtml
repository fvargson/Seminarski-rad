@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            UserName
        </dt>
        <dd class = "col-sm-10">
            @Model.UserName
        </dd>
        <dt class = "col-sm-2">
            E-mail
        </dt>
        <dd class = "col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            E-mail confirmed
        </dt>
        <dd class="col-sm-10">
            @if(Model.EmailConfirmed)
            {
                <input type="checkbox" disabled checked />
            }
            else
            {
                <input type="checkbox" disabled />
            }
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Phone Number confirmed
        </dt>
        <dd class="col-sm-10">
            @if(Model.PhoneNumberConfirmed)
            {
                <input type="checkbox" disabled checked />
            }
            else
            {
                <input type="checkbox" disabled />
            }
        </dd>
    </dl>
    <div>
        <h5>Invoices</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>Full Name</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<Poke.Data.Model.PokeInvoice>)ViewBag.invoices)
                {
                    <tr>
                        <td>
                            @item.DateCreated
                        </td>
                        <td>
                            @item.FirstName @item.LastName
                        </td>
                        <td>
                            @(((List<(int, int)>)ViewBag.Totals).SingleOrDefault(i => i.Item2 == item.Id).Item1)
                            <img src="~/img/PokeDollar.png" class="mb-1" />
                        </td>
                        <td>
                            @Html.ActionLink("Invoice", "Invoice", "Cart", new { area = "", id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-action="Index">Back to list</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
